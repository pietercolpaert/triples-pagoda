web1: #component type & number
  name: tdt            #component settings
  document_root: public
  php_version: 5.4.14
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php ; touch FIRSTTIME ;  php composer.phar install --prefer-source ; else ; php composer update ; fi"
  after_deploy:
    - "rm -f app/storage/views/*"
  before_deploy:
    - "if [ -f FIRSTTIME ] ; then php artisan migrate:install ; php artisan migrate --package=cartalyst/sentry ; php artisan db:seed ; rm FIRSTTIME; fi ;"
    - "php artisan cache:clear"
    - "php artisan migrate"
    - "php artisan migrate --package=tdt/triples"
  php_extensions:
    - mbstring
    - mcrypt
    - pdo_mysql
    - redis
    - zip
    - xcache
  php_session_save_handler: redis
  php_session_save_path: "tcp://tunnel.pagodabox.com:6379"
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views

cache1:
  type: redis
